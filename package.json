{
  "name": "drizzle-explorer",
  "version": "1.0.0",
  "description": "A file explorer application built with Electron, React and TypeScript",
  "main": "dist/electron/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc",
    "build:renderer": "webpack --mode production",
    "watch": "concurrently \"npm run watch:main\" \"npm run watch:renderer\"",
    "watch:main": "tsc -w",
    "watch:renderer": "webpack --mode development --watch",
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run watch\" \"electronmon .\"",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "electron",
    "file-explorer",
    "typescript",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/fluent-ffmpeg": "^2.1.28",
    "better-sqlite3": "^12.5.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "fluent-ffmpeg": "^2.1.3",
    "primeicons": "^6.0.1",
    "primereact": "^10.2.0",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-peer": "^9.11.1",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "win32-api": "^26.1.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/simple-peer": "^9.11.9",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electronmon": "^2.0.4",
    "html-webpack-plugin": "^5.5.3",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.6",
    "ts-loader": "^9.5.0",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.drizzle.explorer",
    "productName": "Drizzle Explorer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  }
}
